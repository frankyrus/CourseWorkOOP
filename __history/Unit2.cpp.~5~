TdogeAdd *dogeAdd;
//---------------------------------------------------------------------------
__fastcall TdogeAdd::TdogeAdd(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------

//---------------------------------------------------------------------------

void __fastcall TdogeAdd::Button1Click(TObject *Sender)
{
	if (ComboBox1->ItemIndex==0) {
	DogForm->dogsTree->Items->AddChild(DogForm->dogsTree->Items->Item[0],Edit1->Text);
	}
	if (ComboBox1->ItemIndex==1) {
	DogForm->dogsTree->Items->AddChild(DogForm->dogsTree->Items->Item[1],Edit1->Text);
	}
	if (ComboBox1->ItemIndex==1) {
	DogForm->dogsTree->Items->AddChild(DogForm->dogsTree->Items->Item[1],Edit1->Text);
	}
	Memo1->Lines->Insert(0,"Продолжительность жизни: " + Edit2->Text);
	Memo1->Lines->Insert(1,")
	dogeAdd->CloseModal();
}
